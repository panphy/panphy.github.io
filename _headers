# HTML: always revalidate
/*.html
  Cache-Control: no-cache, must-revalidate

/
  Cache-Control: no-cache, must-revalidate

# Service worker: always revalidate
/sw.js
  Cache-Control: no-cache, must-revalidate

# Hashed JS/CSS assets (long cache)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/tools/**/*.js
  Cache-Control: public, max-age=31536000, immutable

/tools/**/*.css
  Cache-Control: public, max-age=31536000, immutable
